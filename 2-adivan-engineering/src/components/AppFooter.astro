---
import Container from './Container.astro';
---

<footer id="Footer" class="py-10 md:py-20 shadow-2xl shadow-gray-500 bg-[#1B345A]">
  <Container>
    <div class="divide-y divide-solid"  data-aos="fade-up"> 
      <div class="grid max-lg:grid-cols-1 grid-cols-2 gap-12 mb-10">
        <div>
          <h6 class="text-3xl font-sans font-semibold text-white mb-6">Contact Us</h6>
          <form>
            <div>
              <div>
                <div>
                  <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name *</label>
                  <input
                    type="text"
                    name="name"
                    placeholder="Jose Jaramillo"
                    id="name"
                    class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500"
                    required
                  />
                </div>
              </div>
              <div class="mt-6">
                <div>
                  <label for="email" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Email *</label
                  >
                  <input
                    type="email"
                    id="email"
                    name="email"
                    placeholder="example@email.com"
                    class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500"
                    required
                  />
                </div>
              </div>
              <div class="mt-6">
                <div>
                  <label for="phone" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    >Subject *</label
                  >
                  <input
                    type="text"
                    id="phone"
                    name="phone"
                    placeholder="Subject"
                    class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500"
                    required
                  />
                </div>
              </div>
              <div class="mt-6">
                <div>
                  <label for="message" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"
                    >Message</label
                  >
                  <textarea
                    id="message"
                    name="message"
                    placeholder="Hello there..."
                    class="block w-full p-2 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-xs focus:ring-blue-500 focus:border-blue-500 max-h-28"
                  ></textarea>
                </div>
                <button
                  class="mt-8 w-full text-white bg-[#3B70B7] hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-600 rounded-lg text-base px-5 py-2.5 text-center font-semibold font-sans transition transition-400"
                  type="submit"
                >
                  Send Message
                </button>
              </div>
            </div>
          </form>
        </div>
        <div class="">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3500.6300873303885!2d-81.53250987908972!3d28.67079272249386!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e79dee62cca8c1%3A0x69618a7f4a484c3!2s800%20Johns%20Rd%2C%20Apopka%2C%20FL%2032703%2C%20EE.%20UU.!5e0!3m2!1ses-419!2sco!4v1701340342147!5m2!1ses-419!2sco"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>
      </div>

      <div class="grid max-lg:grid-cols-1 grid-cols-2 gap-12 pt-10">
        <div class="flex gap-6 max-lg:justify-center">
          <img src="/" class="h-12" alt="Adivan Logo" />
          <div class="text-white font-light font-sans">
            <p>Adress: Jhons Rd, Apopka FL 32703</p>
            <p>Phone: +1-123-456-7890</p>
            <p>Email: info@adventdepot.com</p>
            <p>Adress: Jhons Rd, Apopka FL 32703</p>
            <br />
            <p>Follow Us</p>
            <p>Facebook | Twitter | Instagram</p>
            <br />
            <p>&copy; 2023 Adivan | All rights reserved</p>
          </div>
        </div>
        <div>
          <div class="text-white background-spc flex flex-wrap gap-4 flex-col">
            <span class="font-sans text-3xl font-semibold text-center lg:text-end text-white"
              >Subscribe to our news.</span
            >
            <div class="flex flex-1 border-2 border-[#3B70B7]">
              <input
                type="email"
                name="name"
                placeholder="Your email adress"
                id="name"
                class="flex-1 block p-2 text-gray-900 bg-gray-50 text-xs focus:ring-blue-500 focus:border-blue-500"
                required
              />
              <button
                class="text-white bg-[#3B70B7] hover:bg-gray-200 focus:ring-4 focus:outline-none focus:ring-gray-600 text-base px-4 text-center font-semibold font-sans transition transition-400"
                type="submit"
              >
                Get Starded
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</footer>
