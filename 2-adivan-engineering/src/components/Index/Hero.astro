---
import Container from '../Container.astro';
---

<section id="Hero" class="relative" style="height: 100dvh;">
  <img
    src="https://img.freepik.com/foto-gratis/ingeniero-civil-gerente-trabajadores-construccion-tableta-digital-planos-hablando-planeando-sobre-sitio-construccion-concepto-trabajo-equipo-cooperacion_640221-156.jpg?w=1380&t=st=1701345860~exp=1701346460~hmac=65ae890830e657b38e1a8cc67cdb3c867a7d43d4fc810ee024a9a18d29439f13"
    class="w-full h-full object-cover absolute top-0 brightness-50"
    alt=""
  />
  <div class="flex h-full w-full pt-20 relative z-20">
    <div class="max-w-7xl mx-auto px-6 md:px-12 xl:px-6 w-full">
      <div class="flex flex-col h-full justify-center">
        <h1 style="text-wrap: balance;" class="text-6xl font-bold mb-2 text-white max-w-sm">Avidan Engineering</h1>
        <p class="text-white/70 max-w-lg mb-6">
          where engineering excellence meets comfort and sophistication. Our meticulously designed apartments boast
          cutting-edge features, energy-efficient systems, and state-of-the-art amenities.
        </p>
        <div class="flex gap-6 mb-16">
          <button class="bg-blue-950 rounded px-8 py-2 text-white font-extralight">Get a consultation</button>
          <button class="text-blue-950 rounded px-8 py-2 bg-white font-extralight">Know more...</button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .radial-bg {
    background-image: radial-gradient(circle, #ffd03a, #b57b00);
  }
</style>
